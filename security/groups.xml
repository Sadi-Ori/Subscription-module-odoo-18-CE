<odoo>
    <data noupdate="1">

        <!-- Define user groups -->
        <record id="group_subscription_manager" model="res.groups">
            <field name="name">Subscription Manager</field>
        </record>

        <!-- Define access control rules -->
        <record id="access_subscription_management_user" model="ir.model.access">
            <field name="name">access.subscription.management.user</field>
            <field name="model_id" ref="model_subscription_management"/>
            <field name="group_id" ref="base.group_user"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">0</field>
        </record>

        <record id="access_subscription_management_manager" model="ir.model.access">
            <field name="name">access.subscription.management.manager</field>
            <field name="model_id" ref="model_subscription_management"/>
            <field name="group_id" ref="group_subscription_manager"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>

    </data>
</odoo>
