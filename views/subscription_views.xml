<odoo>
    
    <record id="view_subscription_tree" model="ir.ui.view">
        <field name="name">subscription.subscription.tree</field>
        <field name="model">subscription.subscription</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="subscription_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="amount"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    
    <record id="view_subscription_form" model="ir.ui.view">
        <field name="name">subscription.subscription.form</field>
        <field name="model">subscription.subscription</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="subscription_type"/>
                        <field name="amount"/>
                        <field name="state"/>
                    </group>
                    <footer>
                        <button string="Activate" type="object" name="activate_subscription" states="draft"/>
                        <button string="Expire" type="object" name="expire_subscription" states="active"/>
                        <button string="Cancel" type="object" name="cancel_subscription" states="draft, active"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    
    <record id="action_subscription" model="ir.actions.act_window">
        <field name="name">Subscriptions</field>
        <field name="res_model">subscription.subscription</field>
        <field name="view_mode">tree,form</field>
    </record>

   
    <menuitem id="subscription_menu" name="Subscriptions" sequence="10"/>
    <menuitem id="subscription_submenu" name="Manage Subscriptions" parent="subscription_menu" action="action_subscription"/>
